<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_6"
    tools:context=".NutritionFragment">

    <SearchView
        android:id="@+id/sv_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#99F5FEFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>

    <ProgressBar
        android:id="@+id/pb_cal_nutrition"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_calories_status" />

    <TextView
        android:id="@+id/tv_calories_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Low Calories Intake"
        app:layout_constraintStart_toStartOf="@+id/pb_cal_nutrition"
        app:layout_constraintTop_toBottomOf="@+id/sv_food" />

    <TextView
        android:id="@+id/tv_pb_cal_nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2500/3000 cal"
        app:layout_constraintEnd_toEndOf="@+id/pb_cal_nutrition"
        app:layout_constraintTop_toBottomOf="@+id/pb_cal_nutrition" />

</androidx.constraintlayout.widget.ConstraintLayout>